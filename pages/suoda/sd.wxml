<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
    <view class='item'>
      <text class='left'>学号：</text><text class='right'>16041601{{myinfo.no}}</text>
    </view>
    <view class='item'>
      <text class='left'>姓名：</text><text class='right'>索达{{myinfo.name}}</text>
    </view>
    <view class='item'>
     <text class='left'> 班级：</text><text class='right'>160701{{myinfo.classname}}</text>
    </view>
    <view class='item'>
      <text class='left'>学院：</text><text class='right'>计算机学院{{myinfo.departmentname}}</text>
    </view>
    <view class='item' bindtap='setemail'>
     <text class='left'> 邮箱：</text><text class='right' wx:if="{{myinfo.email==''|| myinfo.email==null}}">未绑定</text><text class='right' wx:else>{{myinfo.email}}</text>
    </view>
    <view class='item' bindtap='resetpwd'>
     <text class='left'> 密码：</text><text class='right'>重置</text>
    </view>
    <view class='item' bindtap='exit'>
      <text class='left'>退出：</text><text class='right'>>>></text>
    </view>
 
</view>